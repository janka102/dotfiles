prompt_user() {
  local user="$(whoami)"

  if [[ "$user" == "root" ]]; then
    echo -n "%F{red}"
  else  
    echo -n "%F{yellow}"
  fi

  echo -n "$user%f"
}

prompt_host() {
  if [[ -n "$SSH_CLIENT" ]]; then
    echo -n "@%F{green}%m%f"
  fi

  echo -n " "
}

prompt_dir() {
  echo -n "in %F{cyan}%~%f"
}

prompt_mark() {
  echo -n $'\n%# '
}

build_prompt() {
  prompt_user
  prompt_host
  prompt_dir
  prompt_mark
}

PROMPT="$(build_prompt)"

